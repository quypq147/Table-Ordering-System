@using TableOrdering.Contracts
@model RenameCategoryRequest
@{
    ViewData["Title"] = "Sửa danh mục";
    var id = (Guid)ViewBag.CategoryId;
    var displayOrder = ViewBag.DisplayOrder;
    var isActive = ViewBag.IsActive is bool b && b;
}

<div class="card shadow-sm">
    <div class="card-body" style="max-width:720px">
        <h2 class="h4 mb-3">Sửa danh mục</h2>
        <div class="alert alert-secondary d-flex flex-wrap gap-3 small">
            <div><strong>ID:</strong> <code>@id</code></div>
            <div><strong>Thứ tự hiện tại:</strong> @displayOrder</div>
            <div><strong>Trạng thái:</strong> @(isActive ? "Đang hoạt động" : "Ngưng")</div>
        </div>

        <form method="post" asp-action="Edit" asp-route-id="@id">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="form-label">Tên danh mục</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <button class="btn btn-primary" type="submit">Lưu</button>
                <a class="btn btn-secondary ms-2" asp-action="Index">Quay lại</a>
            </div>
        </form>
    </div>
</div>

