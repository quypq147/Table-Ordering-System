@model List<AdminWeb.Dtos.DiningTableDto>
@{
    ViewData["Title"] = "Tables";
}
<section class="card">
    <div class="card-head between">
        <h3>Tables</h3>
        <a class="ghost" asp-action="Create">+ New Table</a>
    </div>
    <div class="table-wrap">
        <table class="table">
            <thead>
                <tr><th>Code</th><th>Name</th><th>Seats</th><th>Status</th></tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.Code</td>
                        <td>@t.Name</td>
                        <td>@t.SeatCount</td>
                        <td>@(t.IsActive ? "Active" : "Inactive")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

