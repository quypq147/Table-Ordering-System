@model AdminWeb.Dtos.CreateTableRequest
@{
    ViewData["Title"] = "Create Table";
}
<section class="card">
    <div class="card-head"><h3>New Table</h3></div>
    <form method="post" class="form">
        @Html.AntiForgeryToken()
        <div class="grid" style="grid-template-columns:repeat(2,1fr);gap:12px">
            <div><label>Code</label><input class="input" asp-for="Code" /></div>
            <div><label>Name</label><input class="input" asp-for="Name" /></div>
            <div><label>Seats</label><input class="input" asp-for="SeatCount" type="number" min="1" /></div>
            <div>
                <label>Status</label>
                <select class="input" asp-for="IsActive">
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
            </div>
        </div>
        <div style="margin-top:14px">
            <button class="ghost" type="submit">Save</button>
            <a class="ghost" asp-action="Index">Cancel</a>
        </div>
    </form>
</section>
