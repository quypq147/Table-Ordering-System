    ViewData["Title"] = "Dashboard";
}

<!-- JSON th·ª±c t·∫ø ƒë·∫©y t·ª´ HomeController: ViewData["DashboardJson"] -->
<script id="dashboard-data" type="application/json">
@Html.Raw(ViewData["DashboardJson"] ?? "{}")
</script>

<section class="grid gap-lg">
    <div class="stats">
        <div class="stat kpi">
            <div class="stat-head">
                <span class="label">Total Tables</span>
                <span class="stat-icon">ü™ë</span>
            </div>
            <div class="stat-value" data-metric="totalTables">0</div>
            <div class="muted">Active: <b data-metric="activeTables">0</b></div>
        </div>
        <div class="stat kpi">
            <div class="stat-head">
                <span class="label">Open Sessions</span>
                <span class="stat-icon">üîì</span>
            </div>
            <div class="stat-value" data-metric="openSessions">0</div>
            <div class="muted">Avg guests: <b data-metric="avgGuests">0</b></div>
        </div>
        <div class="stat kpi">
            <div class="stat-head">
                <span class="label">Orders Today</span>
                <span class="stat-icon">üßæ</span>
            </div>
            <div class="stat-value" data-metric="ordersToday">0</div>
            <div class="muted">Ready: <b data-metric="ordersReady">0</b></div>
        </div>
        <div class="stat kpi">
            <div class="stat-head">
                <span class="label">Revenue Today</span>
                <span class="stat-icon">‚Ç´</span>
            </div>
            <div class="stat-value" data-metric="revenueToday">0</div>
            <div class="muted">Avg ticket: <b data-metric="avgTicket">0</b></div>
        </div>
        <div class="stat kpi">
            <div class="stat-head">
                <span class="label">KDS Ready</span>
                <span class="stat-icon">‚úÖ</span>
            </div>
            <div class="stat-value" data-metric="ticketsReady">0</div>
            <div class="muted">In Progress: <b data-metric="ticketsInProgress">0</b></div>
        </div>
        <div class="stat kpi">
            <div class="stat-head">
                <span class="label">Avg Prep Time</span>
                <span class="stat-icon">‚è±Ô∏è</span>
            </div>
            <div class="stat-value" data-metric="avgPrepMin">0m</div>
            <div class="muted">95th: <b data-metric="p95PrepMin">0m</b></div>
        </div>
    </div>

    <div class="cards-2col">
        <div class="card">
            <div class="card-head">
                <h3>Revenue (Today)</h3>
                <div class="seg">
                    <button class="seg-btn active">Hourly</button>
                </div>
            </div>
            <canvas id="revChart" height="110"></canvas>
        </div>
        <div class="card">
            <div class="card-head">
                <h3>KDS by Station</h3>
                <div class="seg">
                    <button class="seg-btn active">Live</button>
                </div>
            </div>
            <canvas id="stationChart" height="110"></canvas>
        </div>
    </div>

    <div class="card">
        <div class="card-head between">
            <h3>Recent Orders</h3>
            <a class="ghost" asp-controller="Orders" asp-action="Index">View all</a>
        </div>
        <div class="table-wrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Created</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="recentOrders">
                    <!-- JS render t·ª´ dashboard-data ho·∫∑c fallback demo -->
                </tbody>
            </table>
        </div>
    </div>

    <div class="card">
        <div class="card-head between">
            <h3>Quick Actions</h3>
        </div>
        <div class="quick">
            <a class="ghost" asp-controller="Tables" asp-action="Index">Open / Merge / Move Table</a>
            <a class="ghost" asp-controller="Menu" asp-action="Create">Create Menu Item</a>
            <a class="ghost" asp-controller="Orders" asp-action="Index">Review Orders</a>
        </div>
    </div>
</section>
