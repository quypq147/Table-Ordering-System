@using AdminWeb.Dtos
@model CreateMenuItemRequest
@{
    ViewData["Title"] = "Thêm món";
}
<h1>Thêm món</h1>
<form method="post">
    @Html.AntiForgeryToken()
    <div>
        <label>Tên</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label>SKU</label>
        <input asp-for="Sku" />
    </div>
    <div>
        <label>CategoryId</label>
        <input asp-for="CategoryId" />
    </div>
    <div>
        <label>Giá</label>
        <input asp-for="Price" type="number" step="0.01" />
    </div>
    <button type="submit">Lưu</button>
</form>

