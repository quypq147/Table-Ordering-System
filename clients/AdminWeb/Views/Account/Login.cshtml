@model string
@{
    Layout = null;
    ViewData["Title"] = "Đăng nhập hệ thống";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng nhập - Lezato Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    
    <style>
        body { font-family: 'Poppins', sans-serif; background: linear-gradient(135deg, #FFF0EB 0%, #FFFFFF 100%); height: 100vh; display: flex; align-items: center; justify-content: center; }
        .login-card { background: white; border-radius: 20px; box-shadow: 0 10px 40px rgba(255, 91, 36, 0.1); overflow: hidden; width: 100%; max-width: 900px; display: flex; min-height: 550px; }
        .login-left { flex: 1; padding: 50px; display: flex; flex-direction: column; justify-content: center; }
        .login-right { flex: 1; background: url('https://images.unsplash.com/photo-1552566626-52f8b828add9?q=80&w=1000&auto=format&fit=crop') center/cover no-repeat; position: relative; display: none; }
        .overlay { position: absolute; inset: 0; background: linear-gradient(to top, rgba(255,91,36,0.8), transparent); display: flex; align-items: flex-end; padding: 40px; color: white; }
        .brand-logo { font-size: 28px; font-weight: 800; color: #FF5B24; margin-bottom: 30px; display: flex; align-items: center; gap: 10px; }
        .form-control { padding: 12px 15px; border-radius: 10px; border: 1px solid #eee; background-color: #f9f9f9; }
        .form-control:focus { border-color: #FF5B24; box-shadow: 0 0 0 4px rgba(255, 91, 36, 0.1); background-color: #fff; }
        .btn-primary { background-color: #FF5B24; border: none; padding: 14px; border-radius: 10px; font-weight: 600; transition: all 0.3s; }
        .btn-primary:hover { background-color: #e04f1d; transform: translateY(-2px); box-shadow: 0 5px 15px rgba(255, 91, 36, 0.3); }
        @@media (min-width: 768px) { .login-right { display: block; } }
    </style>
</head>
<body>

    <div class="login-card">
        <div class="login-left">
            <div class="brand-logo">
                <i class="fas fa-hamburger"></i> LEZATO
            </div>
            
            <h3 class="fw-bold mb-1">Chào mừng trở lại! 👋</h3>
            <p class="text-muted mb-4">Vui lòng đăng nhập để quản lý nhà hàng.</p>

            <form method="post" action="/login">
                <input type="hidden" name="ReturnUrl" value="@Model" />
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger py-2 small rounded-3 border-0 bg-danger bg-opacity-10 text-danger">
                        Sai tên đăng nhập hoặc mật khẩu.
                    </div>
                }

                <div class="mb-3">
                    <label class="form-label fw-bold small text-muted">TÀI KHOẢN / EMAIL</label>
                    <div class="position-relative">
                        <input class="form-control ps-5" name="UserNameOrEmail" placeholder="admin" required />
                        <i class="fas fa-user position-absolute top-50 start-0 translate-middle-y text-muted ps-3"></i>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold small text-muted">MẬT KHẨU</label>
                    <div class="position-relative">
                        <input class="form-control ps-5" name="Password" type="password" placeholder="••••••••" required />
                        <i class="fas fa-lock position-absolute top-50 start-0 translate-middle-y text-muted ps-3"></i>
                    </div>
                </div>

                <button class="btn btn-primary w-100 mb-3">ĐĂNG NHẬP</button>
                
                <div class="text-center">
                    <a href="#" class="text-muted small text-decoration-none">Quên mật khẩu?</a>
                </div>
            </form>
        </div>

        <div class="login-right">
            <div class="overlay">
                <div>
                    <h2 class="fw-bold">Quản lý chuyên nghiệp</h2>
                    <p class="m-0 opacity-75">Tối ưu hóa quy trình vận hành nhà hàng của bạn với Lezato System.</p>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
