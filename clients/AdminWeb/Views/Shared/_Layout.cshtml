@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Tổng quan";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title · Quản trị hệ thống gọi món</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Dynamic PWA theme colors for light/dark -->
    <meta name="theme-color" content="#f6f7fb" media="(prefers-color-scheme: light)">
    <meta name="theme-color" content="#0b0c10" media="(prefers-color-scheme: dark)">
</head>
<body class="app">
    <aside class="sidebar" id="sidebar">
        <div class="brand"><div class="logo">QT</div></div>
        <nav class="nav">
            <a class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index" title="Tổng quan"><svg viewBox="0 0 24 24" class="icon"><path d="M3 12l9-9 9 9v8a2 2 0 0 1-2 2h-5v-7H10v7H5a2 2 0 0 1-2-2z" /></svg></a>
            <a class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Tables" ? "active" : "")" asp-controller="Tables" asp-action="Index" title="Bàn"><svg viewBox="0 0 24 24" class="icon"><path d="M4 10h16M4 14h16M7 7v10M17 7v10" /></svg></a>
            <a class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Orders" ? "active" : "")" asp-controller="Orders" asp-action="Index" title="Đơn hàng"><svg viewBox="0 0 24 24" class="icon"><path d="M3 6h18M3 12h18M3 18h18" /></svg></a>
            <a class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Menu" ? "active" : "")" asp-controller="Menu" asp-action="Index" title="Thực đơn"><svg viewBox="0 0 24 24" class="icon"><path d="M4 6h16v12H4zM4 10h16M9 6v12" /></svg></a>
            <a class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Categories" ? "active" : "")" asp-controller="Categories" asp-action="Index" title="Danh mục"><svg fill="#000000" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M10 3H4a1 1 0 0 0-1 1v6a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4a1 1 0 0 0-1-1zm10 10h-6a1 1 0 0 0-1 1v6a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-6a1 1 0 0 0-1-1zM17 3c-2.206 0-4 1.794-4 4s1.794 4 4 4 4-1.794 4-4-1.794-4-4-4zM7 13c-2.206 0-4 1.794-4 4s1.794 4 4 4 4-1.794 4-4-1.794-4-4-4z" /></svg></a>
            <a class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Users" ? "active" : "")" asp-controller="Users" asp-action="Index" title="Tài khoản"><svg viewBox="0 0 24 24" class="icon"><path d="M16 14a4 4 0 1 0-8 0v4h8v-4zM12 6a4 4 0 1 1 0 8" /></svg></a>
        </nav>
    </aside>
    <div class="main">
        <header class="topbar">
            <button class="icon-btn" id="btnToggle"><svg viewBox="0 0 24 24" class="icon"><path d="M4 6h16M4 12h16M4 18h16" /></svg></button>
            <div class="topbar-title">Hệ thống gọi món · Quản trị</div>
            <div class="topbar-right">
                <div class="avatar">QT</div>
                <form method="post" action="/logout" class="d-inline ms-2" data-loading>
                    <button type="submit" class="btn btn-link text-decoration-none">Đăng xuất</button>
                </form>
            </div>
        </header>
        <main class="content">@RenderBody()</main>
    </div>
    <!-- Toast stack -->
    <div id="toastStack" class="toast-stack"></div>
    <!-- Loading overlay -->
    <div id="loadingOverlay" class="loading-overlay d-none"><div class="spinner"></div></div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/ui.js" asp-append-version="true" defer></script>
    <script src="~/js/dashboard.js" asp-append-version="true" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>