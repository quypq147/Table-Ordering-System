<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lezato Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <aside class="sidebar">
        <div class="brand">
            <i class="fas fa-hamburger"></i> LEZATO
        </div>

        <ul class="sidebar-menu">
            @{
                var controller = ViewContext.RouteData.Values["Controller"]?.ToString();
            }

            <li>
                <a href="@Url.Action("Index", "Home")" class="@(controller == "Home" ? "active" : "")">
                    <i class="fas fa-th-large"></i> Dashboard
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Orders")" class="@(controller == "Orders" ? "active" : "")">
                    <i class="fas fa-shopping-bag"></i> Orders
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Menu")" class="@(controller == "Menu" ? "active" : "")">
                    <i class="fas fa-utensils"></i> Menus
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Tables")" class="@(controller == "Tables" ? "active" : "")">
                    <i class="fas fa-chair"></i> Tables
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Users")" class="@(controller == "Users" ? "active" : "")">
                    <i class="fas fa-users"></i> Customers
                </a>
            </li>
            <li>
                <a href="#" class="">
                    <i class="fas fa-chart-line"></i> Analytics
                </a>
            </li>
        </ul>

        <div class="mt-auto p-3">
            <div class="bg-dark text-white p-3 rounded-4 position-relative overflow-hidden">
                <small class="text-white-50">Manage your</small>
                <div class="fw-bold mb-2">Restaurant efficiently</div>
                <button class="btn btn-sm btn-light text-primary fw-bold w-100 rounded-3">Upgrade</button>
            </div>
        </div>
    </aside>

    <main class="main-content">

        <div class="topbar">
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Search for food, details...">
            </div>

            <div class="d-flex align-items-center gap-3">
                <button class="btn btn-light rounded-circle shadow-sm" style="width: 45px; height: 45px;">
                    <i class="far fa-bell text-muted"></i>
                </button>

                <div class="d-flex align-items-center gap-2 bg-white px-2 py-1 rounded-pill shadow-sm border">
                    <img src="https://ui-avatars.com/api/?name=Admin&background=FF5B24&color=fff" class="rounded-circle" width="32" height="32" alt="Admin">
                    <span class="small fw-bold px-2">Admin</span>
                    <i class="fas fa-chevron-down text-muted small me-2"></i>
                </div>
            </div>
        </div>

        @RenderBody()

    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>