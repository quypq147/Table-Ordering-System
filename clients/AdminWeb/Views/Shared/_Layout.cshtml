@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Dashboard";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title · Table Ordering Admin</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="app">
    <aside class="sidebar" id="sidebar">
        <div class="brand">
            <div class="logo">TO</div>
        </div>
        <nav class="nav">
            <a class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString()=="Home"?"active":"")" asp-controller="Home" asp-action="Index" title="Dashboard">
                <svg viewBox="0 0 24 24" class="icon"><path d="M3 12l9-9 9 9v8a2 2 0 0 1-2 2h-5v-7H10v7H5a2 2 0 0 1-2-2z"/></svg>
            </a>
            <a class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString()=="Tables"?"active":"")" asp-controller="Tables" asp-action="Index" title="Tables">
                <svg viewBox="0 0 24 24" class="icon"><path d="M4 10h16M4 14h16M7 7v10M17 7v10"/></svg>
            </a>
            <a class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString()=="Orders"?"active":"")" asp-controller="Orders" asp-action="Index" title="Orders">
                <svg viewBox="0 0 24 24" class="icon"><path d="M3 6h18M3 12h18M3 18h18"/></svg>
            </a>
            <a class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString()=="Menu"?"active":"")" asp-controller="Menu" asp-action="Index" title="Menu">
                <svg viewBox="0 0 24 24" class="icon"><path d="M4 6h16v12H4zM4 10h16M9 6v12"/></svg>
            </a>
            <a class="nav-item" href="#" title="KDS">
                <svg viewBox="0 0 24 24" class="icon"><path d="M4 19h16M7 19V9M12 19V5M17 19V13"/></svg>
            </a>
            <a class="nav-item" href="#" title="Vouchers">
                <svg viewBox="0 0 24 24" class="icon"><path d="M21 8a3 3 0 0 1-3-3H6a3 3 0 0 1-3 3v8a3 3 0 0 1 3 3h12a3 3 0 0 1 3-3zM8 12h8"/></svg>
            </a>
            <a class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString()=="Users"?"active":"")" asp-controller="Users" asp-action="Index" title="Users">
                <svg viewBox="0 0 24 24" class="icon"><path d="M16 14a4 4 0 1 0-8 0v4h8v-4zM12 6a4 4 0 1 1 0 8"/></svg>
            </a>
            <a class="nav-item" asp-controller="Reports" asp-action="Index" title="Reports">
                <svg viewBox="0 0 24 24" class="icon"><path d="M4 4h16v16H4zM8 16V8M12 16v-4M16 16v-6"/></svg>
            </a>
            <a class="nav-item" asp-controller="Settings" asp-action="Index" title="Settings">
                <svg viewBox="0 0 24 24" class="icon"><path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm7.4-3a7.4 7.4 0 0 0-.15-1.5l2.05-1.6-2-3.46-2.45.98A7.5 7.5 0 0 0 15.5 4l-.37-2.6h-4.3L10.5 4a7.5 7.5 0 0 0-1.85.92L6.2 4l-2 3.46 2.06 1.6A7.4 7.4 0 0 0 6.1 12c0 .51.05 1.01.15 1.5L4.2 15.1l2 3.46 2.45-.98A7.5 7.5 0 0 0 10.5 20l.33 2.6h4.34L15.5 20c.66-.26 1.28-.6 1.85-.98l2.45.98 2-3.46-2.05-1.6c.1-.49.15-.99.15-1.5z"/></svg>
            </a>
        </nav>
    </aside>

    <div class="main">
        <header class="topbar">
            <button class="icon-btn" id="btnToggle">
                <svg viewBox="0 0 24 24" class="icon"><path d="M4 6h16M4 12h16M4 18h16"/></svg>
            </button>
            <div class="topbar-title">Table Ordering · Admin</div>
            <div class="topbar-right">
                <button class="icon-btn" id="themeToggle" title="Đổi theme">
                    <svg viewBox="0 0 24 24" class="icon"><path d="M12 3a9 9 0 1 0 9 9 7 7 0 0 1-9-9z"/></svg>
                </button>
                <div class="avatar">AD</div>
            </div>
        </header>

        <main class="content">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/dashboard.js" asp-append-version="true"></script>
</body>
</html>
