@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lezato KDS</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="kds-header">
        <div class="d-flex align-items-center">
            <h4 class="m-0 me-4 fw-bold">Lezato<span class="text-warning">.</span> KDS</h4>
        </div>

        <div class="d-none d-md-block text-success fw-bold" style="font-size: 12px;">
            <i class="fas fa-wifi me-1"></i> HỆ THỐNG ONLINE
        </div>

        <div class="toggle-switch">
            <a href="@Url.Action("Index", "Board")" class="toggle-btn active">Đang chờ</a>
            <a href="#" class="toggle-btn">Lịch sử</a>
        </div>
    </header>

    @RenderBody()

    <script>
        window.__cfg = {
            kdsHub: '@Configuration["SignalR:KdsHub"]',
            bearer: '@Configuration["Backend:StaticBearer"]'
        };
    </script>

    @Html.Partial("_Toast")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script src="~/js/kds.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
