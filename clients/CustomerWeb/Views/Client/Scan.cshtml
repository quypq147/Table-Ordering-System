@{
    Layout = null;
}
<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
    <title>Quét QR - Lezato</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Poppins', sans-serif; background-color: #1a1a1a; color: white; }
        #reader { width: 100%; border-radius: 20px; overflow: hidden; border: none !important; }
        #reader video { object-fit: cover; border-radius: 20px; }
        #reader__dashboard_section_csr span, #reader__dashboard_section_swaplink { display: none !important; }
    </style>
</head>
<body class="h-screen flex flex-col items-center justify-center p-4">

    <div class="text-center mb-8">
        <div class="w-16 h-16 bg-orange-500 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg shadow-orange-500/50">
            <i class="fas fa-qrcode text-3xl text-white"></i>
        </div>
        <h1 class="text-2xl font-bold">Quét mã bàn</h1>
        <p class="text-gray-400 text-sm mt-1">Vui lòng đưa camera vào mã QR trên bàn</p>
    </div>

    <div class="relative w-full max-w-sm aspect-square bg-gray-800 rounded-3xl p-1 shadow-2xl border border-gray-700">
        <div class="absolute inset-0 z-10 pointer-events-none">
            <div class="w-full h-full border-4 border-orange-500/50 rounded-3xl box-border relative">
                <div class="absolute top-4 left-4 w-8 h-8 border-t-4 border-l-4 border-white rounded-tl-lg"></div>
                <div class="absolute top-4 right-4 w-8 h-8 border-t-4 border-r-4 border-white rounded-tr-lg"></div>
                <div class="absolute bottom-4 left-4 w-8 h-8 border-b-4 border-l-4 border-white rounded-bl-lg"></div>
                <div class="absolute bottom-4 right-4 w-8 h-8 border-b-4 border-r-4 border-white rounded-br-lg"></div>
            </div>
        </div>
        
        <div id="reader" class="w-full h-full bg-black rounded-2xl overflow-hidden"></div>
    </div>

    <div id="status" class="mt-6 text-center text-sm text-gray-400 min-h-[20px]">
        Đang khởi động camera...
    </div>

    <div class="mt-auto pb-4 text-center">
        <a href="/client/qr-help" class="inline-flex items-center text-orange-500 hover:text-orange-400 font-medium transition">
            <i class="fas fa-question-circle mr-2"></i> Không quét được? Xem hướng dẫn
        </a>
    </div>

    <script src="https://unpkg.com/html5-qrcode@2.3.8/html5-qrcode.min.js"></script>
    <script>
        const statusEl = document.getElementById('status');
        function setStatus(t){ statusEl.innerHTML = t; }

        function onScanSuccess(decodedText) {
            if(navigator.vibrate) navigator.vibrate(200);
            setStatus('<span class="text-green-500 font-bold"><i class="fas fa-check-circle"></i> Đã quét thành công!</span>');
            setTimeout(() => {
                try {
                    const u = new URL(decodedText);
                    if (u.pathname.startsWith('/c')) { 
                        window.location.href = decodedText; 
                    } else {
                        window.location.href = '/c?code=' + encodeURIComponent(decodedText);
                    }
                } catch {
                    window.location.href = '/c?code=' + encodeURIComponent(decodedText);
                }
            }, 500);
        }

        const html5QrCode = new Html5Qrcode("reader");
        
        Html5Qrcode.getCameras().then(devices => {
            if (devices && devices.length) {
                const cameraId = devices.find(d => (d.label||'').toLowerCase().includes('back'))?.id || devices[0].id;
                
                html5QrCode.start(
                    cameraId, 
                    { fps: 10, qrbox: { width: 250, height: 250 } },
                    onScanSuccess,
                    (errorMessage) => { }
                ).catch(err => {
                    setStatus('<span class="text-red-500">Lỗi khởi động: ' + err + '</span>');
                });
            } else {
                setStatus('<span class="text-red-500">Không tìm thấy camera trên thiết bị này.</span>');
            }
        }).catch(err => {
            setStatus('<span class="text-red-500">Bạn cần cấp quyền truy cập Camera.</span>');
        });
    </script>
</body>
</html>
