<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] ?? "Gọi món tại bàn")</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CustomerWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="topbar border-bottom">
        <div class="container d-flex align-items-center justify-content-between">
            <a class="brand" asp-area="" asp-controller="Home" asp-action="Index">Gọi món tại bàn</a>
            <nav class="nav gap-3 small">
                <a class="nav-link px-0" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                <a class="nav-link px-0" asp-area="" asp-controller="Client" asp-action="ScanHelp">Cách quét QR</a>
            </nav>
        </div>
    </header>

    <div class="container py-3">
        <!-- Two-column layout: main content + cart sidebar -->
        <div class="row g-3">
            <main role="main" class="content col-12 col-lg-9">
                @RenderBody()
            </main>
        </div>
    </div>
    @{
        var backendBase = Context.RequestServices.GetService<IConfiguration>()?["Backend:BaseUrl"]?.TrimEnd('/');
        var tableCode = ViewBag.TableCode as string ?? string.Empty;
    }

    @if (!string.IsNullOrEmpty(tableCode))
    {
        <!-- Nút nổi mở/đóng chat -->
        <button id="chatToggleButton"
                type="button"
                class="btn btn-primary rounded-circle shadow chat-toggle-btn"
                aria-label="Mở/đóng chat"
                aria-expanded="false">
            💬
        </button>

        
    }

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

