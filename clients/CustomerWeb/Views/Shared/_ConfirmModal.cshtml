<div id="confirm-modal" class="fixed inset-0 bg-black/30 hidden items-center justify-center z-50">
  <div class="bg-white rounded-2xl shadow-xl w-[90%] max-w-sm p-5">
    <div class="flex items-start gap-3">
      <i class="fas fa-question-circle text-blue-500 text-xl"></i>
      <div>
        <h3 class="text-base font-bold text-gray-800">Xác nhận</h3>
        <p class="text-sm text-gray-600 mt-1" id="confirm-message">Bạn có chắc không?</p>
      </div>
    </div>
    <div class="flex justify-end gap-2 mt-5">
      <button id="confirm-cancel" class="px-4 py-2 rounded-lg border border-gray-200 text-gray-700 hover:bg-gray-50">Hủy</button>
      <button id="confirm-ok" class="px-4 py-2 rounded-lg bg-orange-500 text-white hover:bg-orange-600">Đồng ý</button>
    </div>
  </div>
</div>
