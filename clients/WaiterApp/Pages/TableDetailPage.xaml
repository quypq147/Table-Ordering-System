<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WaiterApp.Pages.TableDetailPage"
             Title="Chi tiết bàn">
    <ContentPage.Content>
        <Grid RowDefinitions="Auto,*,Auto" Padding="16">
            <!-- Thông tin bàn -->
            <StackLayout Orientation="Horizontal"
                         Spacing="8"
                         Margin="0,0,0,8">
                <Label Text="Bàn:"
                       FontAttributes="Bold" />
                <Label x:Name="TableCodeLabel"
                       FontAttributes="Bold" />
            </StackLayout>

            <!-- Danh sách món trong đơn hiện tại -->
            <CollectionView Grid.Row="1"
                            x:Name="OrderItemsCollection">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="4"
                               Padding="10"
                               CornerRadius="12"
                               HasShadow="True"
                               BackgroundColor="White">
                            <Grid ColumnDefinitions="*,Auto"
                                  RowDefinitions="Auto,Auto">
                                <StackLayout Grid.Row="0"
                                             Grid.Column="0"
                                             Spacing="2">
                                    <Label Text="{Binding ItemName}"
                                           FontAttributes="Bold" />
                                    <Label Text="{Binding Note}"
                                           FontSize="12"
                                           TextColor="Gray" />
                                </StackLayout>

                                <StackLayout Grid.Row="0"
                                             Grid.Column="1"
                                             HorizontalOptions="End"
                                             VerticalOptions="Center">
                                    <Label Text="{Binding Quantity}"
                                           FontAttributes="Bold"
                                           FontSize="16" />
                                </StackLayout>

                                <Label Grid.Row="1"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Text="{Binding Status}"
                                       FontSize="12"
                                       TextColor="#6b7280" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Nút xem phiếu bếp -->
            <Button Grid.Row="2"
                    Text="Xem phiếu bếp"
                    Margin="0,12,0,0"
                    HorizontalOptions="Fill"
                    Clicked="OnViewTicketsClicked" />
        </Grid>
    </ContentPage.Content>
</ContentPage>

