<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WaiterApp.Pages.SettingsPage"
             Title="Thiết lập">
  <ContentPage.Content>
    <VerticalStackLayout Padding="24" Spacing="12">
      <Label Text="API Base URL" FontSize="18" FontAttributes="Bold"/>
      <Entry x:Name="ApiUrlEntry" Placeholder="http://10.0.2.2:5075"/>
      <HorizontalStackLayout Spacing="12">
        <Button Text="Lưu" Clicked="OnSave"/>
        <Button Text="Kiểm tra" Clicked="OnTest"/>
      </HorizontalStackLayout>
      <Label x:Name="TestResult" TextColor="Gray"/>
      <Button Text="Đăng xuất" Clicked="OnLogout"/>
    </VerticalStackLayout>
  </ContentPage.Content>
</ContentPage>
