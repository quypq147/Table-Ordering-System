<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WaiterApp.Pages.ChatPage"
             Title="TRÒ CHUYỆN">
  <ContentPage.Content>
    <Grid RowDefinitions="Auto,Auto,*" Padding="16" BackgroundColor="#F5F6F8">
      <Grid ColumnDefinitions="*,*,*,*,*" Margin="0,0,0,8">
        <Button Text="Tầng 1" />
        <Button Grid.Column="1" Text="Tầng 2" />
        <Button Grid.Column="2" Text="Tầng 3" />
        <Button Grid.Column="3" Text="Tầng trệt" />
        <Button Grid.Column="4" Text="Mang đi" />
      </Grid>
      <CollectionView Grid.Row="2">
        <CollectionView.ItemTemplate>
          <DataTemplate>
            <Grid Padding="12" ColumnDefinitions="*,Auto">
              <StackLayout>
                <Label Text="Nhân viên" FontAttributes="Bold"/>
                <Label Text="Khách yêu cầu thêm sốt mayo" FontSize="12"/>
              </StackLayout>
              <Label Grid.Column="1" Text="Bàn 1"/>
            </Grid>
          </DataTemplate>
        </CollectionView.ItemTemplate>
      </CollectionView>
    </Grid>
  </ContentPage.Content>
</ContentPage>
