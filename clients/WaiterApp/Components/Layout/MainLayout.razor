@inherits LayoutComponentBase
@inject WaiterApp.Services.NavigationBridge NavigationBridge
@inject Microsoft.AspNetCore.Components.NavigationManager NavManager

<div class="d-flex flex-column min-vh-100 waiter-page">
    <header class="app-header">
        <div class="container-fluid d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
                <button class="btn btn-outline-secondary me-3 d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileSidebar" aria-controls="mobileSidebar" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand fw-semibold text-uppercase tracking-wide text-dark" href="/">Lezato</a>
            </div>

            <div class="d-flex align-items-center gap-3">
                <div class="d-none d-md-block text-muted small">Đăng nhập bởi</div>
                <div class="d-flex align-items-center gap-2 px-2 py-1 rounded-2 bg-white shadow-sm staff-info">
                    <img src="/lib/bootstrap-icons/person-circle.svg" alt="avatar" width="36" height="36" class="rounded-circle border" />
                    <div class="d-flex flex-column">
                        <span class="fw-semibold text-dark">@EmployeeName</span>
                        <small class="text-muted">Nhân viên phục vụ</small>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="flex-grow-1 d-flex">
        <aside class="d-none d-lg-flex flex-column site-sidebar p-3">
            <div class="flex-grow-1 overflow-auto">
                <NavMenu />
            </div>
        </aside>

        <main class="flex-grow-1 app-main">
            <div class="container-fluid py-4">
                @Body
            </div>
            <Components.Shared.ToastHost />
        </main>
    </div>
</div>

<div class="offcanvas offcanvas-start text-bg-light" tabindex="-1" id="mobileSidebar" aria-labelledby="mobileSidebarLabel">
    <div class="offcanvas-header border-bottom">
        <h5 class="offcanvas-title" id="mobileSidebarLabel">Lezato</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body p-0">
        <NavMenu />
    </div>
</div>

<script src="/js/scrollHelpers.js"></script>

@code {
    [Parameter]
    public string? EmployeeName { get; set; } = "Nhân viên";

    protected override void OnInitialized()
    {
        NavigationBridge.Register(NavManager);
        base.OnInitialized();
    }
}
