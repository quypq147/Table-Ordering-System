@page "/orderdetail"
@using System.Net.Http.Json
@using WaiterApp.Services
@using WaiterApp.Models
@implements IDisposable
@inject ApiClient ApiClient
@inject Microsoft.AspNetCore.Components.NavigationManager Nav
@inject ToastService Toast
@inject OrdersRealtimeService RealtimeService

<div class="flex flex-col h-screen bg-background-light dark:bg-background-dark pb-24">
    <div class="px-6 pt-8 pb-4 flex items-center gap-3 bg-white dark:bg-gray-900 sticky top-0 z-10 shadow-sm">
        <button class="w-10 h-10 rounded-full bg-gray-50 dark:bg-gray-800 flex items-center justify-center text-gray-500 hover:text-primary transition-colors" @onclick="GoBack">
            <span class="material-icons-round">arrow_back</span>
        </button>
        <h1 class="text-xl font-bold text-gray-800 dark:text-white flex-1">Chi tiết đơn hàng</h1>
        @if (order != null)
        {
            <span class="text-xs font-mono text-gray-400">#@order.Status</span>
        }
    </div>

    <div class="flex-1 overflow-y-auto px-6 py-4 space-y-4 no-scrollbar">
        @if (loading)
        {
            <div class="flex justify-center py-10">
                <div class="w-8 h-8 border-4 border-primary border-t-transparent rounded-full animate-spin"></div>
            </div>
        }
        else if (order != null)
        {
            <div class="bg-white dark:bg-gray-800 p-5 rounded-2xl shadow-soft">
                <div class="flex justify-between items-center mb-4 pb-4 border-b border-gray-100 dark:border-gray-700">
                    <div>
                        <p class="text-xs text-gray-400 uppercase font-bold tracking-wider">Mã đơn</p>
                        <p class="text-lg font-bold text-gray-800 dark:text-white">#@order.Id.ToString().Substring(0, 8)</p>
                    </div>
                    <div class="text-right">
                        <p class="text-xs text-gray-400 uppercase font-bold tracking-wider">Trạng thái</p>
                        <span class="text-sm font-bold text-primary">@GetStatusText(order.Status)</span>
                    </div>
                </div>

                <div class="space-y-3">
                    @foreach (var item in order.Items)
                    {
                        <div class="flex justify-between items-center">
                            <div class="flex items-center gap-3">
                                <div class="w-8 h-8 rounded-lg bg-gray-100 flex items-center justify-center text-xs font-bold text-gray-600">
                                    @item.Quantity
                                </div>
                                <span class="font-medium text-gray-800 dark:text-white text-sm">@item.Name</span>
                            </div>
                            <span class="text-sm font-bold text-gray-600">@item.LineTotal.ToString("N0")</span>
                        </div>
                    }
                </div>

                <div class="mt-4 pt-4 border-t border-gray-100 dark:border-gray-700 flex justify-between items-end">
                    <span class="text-sm font-bold text-gray-500">Tổng cộng</span>
                    <span class="text-xl font-bold text-primary">@order.Total.ToString("N0") @order.Currency</span>
                </div>
            </div>

            @if (order.Status == 4)
            {
                <button @onclick="() => showMenuModal = true"
                        class="w-full py-3 border-2 border-dashed border-primary/30 text-primary rounded-xl font-bold flex items-center justify-center gap-2 hover:bg-primary/5 transition-colors">
                    <span class="material-icons-round">add_circle_outline</span>
                    Thêm món ăn
                </button>
            }
        }
        else if (!string.IsNullOrEmpty(error))
        {
            <div class="p-4 bg-red-50 text-red-600 rounded-xl text-center">@error</div>
        }
    </div>

    @if (order != null)
    {
        <div class="p-4 bg-white dark:bg-gray-900 border-t border-gray-100 dark:border-gray-800 fixed bottom-0 left-0 right-0 z-20 pb-8">
            <div class="max-w-md mx-auto flex flex-col gap-3">

                @if (order.Status == 1) // Submitted
                {
                    <button class="w-full py-3 bg-primary text-white rounded-xl font-bold shadow-lg shadow-primary/30 active:scale-95 transition-transform"
                            @onclick="StartOrderAsync">
                        Bắt đầu nấu (Gửi bếp)
                    </button>
                }
                else if (order.Status == 2) // InProgress
                {
                    <div class="w-full py-3 bg-orange-50 text-orange-600 border border-orange-200 rounded-xl font-medium text-center flex items-center justify-center gap-2">
                        <span class="w-2 h-2 bg-orange-500 rounded-full animate-ping"></span>
                        Bếp đang nấu...
                    </div>
                }
                else if (order.Status == 3) // Ready
                {
                    <button class="w-full py-3 bg-green-600 text-white rounded-xl font-bold shadow-lg shadow-green-600/30 hover:bg-green-700 active:scale-95 transition-all flex items-center justify-center gap-2"
                            @onclick="MarkServedAsync">
                        <span class="material-icons-round">check_circle</span>
                        Đã phục vụ
                    </button>

                    <div class="w-full py-3 bg-green-50 border border-green-200 rounded-xl text-center text-sm text-green-700 font-semibold flex items-center justify-center gap-2 mt-2">
                        <span class="material-icons-round text-base">restaurant</span>
                        Món đã xong! Hãy mang ra bàn.
                    </div>
                }
                else if (order.Status == 5) // Paid -> Hiện nút Xuất
                {
                    <div class="space-y-2">
                        <div class="w-full py-3 bg-gray-100 text-gray-500 rounded-xl font-bold text-center border border-gray-200 flex items-center justify-center gap-2">
                            <span class="material-icons-round">check_circle</span>
                            Đã thanh toán xong
                        </div>
                        <button class="w-full py-3 border border-gray-300 text-gray-700 bg-white rounded-xl font-bold shadow-sm hover:bg-gray-50 active:scale-95 transition-all flex items-center justify-center gap-2"
                                @onclick="ExportInvoiceAsync">
                            <span class="material-icons-round text-primary">print</span>
                            Xuất hóa đơn
                        </button>
                    </div>
                }

                @if (order.Status == 7)
                {
                    <div class="grid p-20 gap-3">
                        <button class="py-3 bg-green-600 text-white rounded-xl font-bold shadow-md active:scale-95 transition-transform flex items-center justify-center gap-2"
                                @onclick="() => HandlePayment(PaymentMethod.Cash)">
                            <span class="material-icons-round text-sm">payments</span>
                            Tiền mặt
                        </button>
                        <button class="py-3 bg-blue-600 text-white rounded-xl font-bold shadow-md active:scale-95 transition-transform flex items-center justify-center gap-2"
                                @onclick="() => HandlePayment(PaymentMethod.Transfer)">
                            <span class="material-icons-round text-sm">qr_code</span>
                            CK / QR
                        </button>
                    </div>
                }

            </div>
        </div>
    }

    @if (showMenuModal)
    {
        <div class="fixed inset-0 z-50 flex items-end sm:items-center justify-center bg-black/50 backdrop-blur-sm p-4">
            <div class="bg-white dark:bg-gray-800 w-full max-w-md rounded-2xl shadow-2xl max-h-[80vh] flex flex-col">
                <div class="p-4 border-b border-gray-100 dark:border-gray-700 flex justify-between items-center">
                    <h3 class="font-bold text-lg dark:text-white">Thực đơn</h3>
                    <button @onclick="() => showMenuModal = false" class="text-gray-400 hover:text-gray-600">
                        <span class="material-icons-round">close</span>
                    </button>
                </div>
                <div class="flex-1 overflow-y-auto p-4 space-y-3">
                    @if (menuLoading)
                    {
                        <div class="text-center py-4">Đang tải...</div>
                    }
                    else if (menuItems != null)
                    {
                        @foreach (var item in menuItems)
                        {
                            <div class="flex justify-between items-center p-3 border border-gray-100 rounded-xl">
                                <div><p class="font-bold">@item.Name</p><p class="text-xs text-primary">@item.Price.ToString("N0")</p></div>
                                <button class="bg-primary text-white w-8 h-8 rounded-full shadow-md" @onclick="() => AddItemToOrder(item)">+</button>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter][SupplyParameterFromQuery] public Guid orderId { get; set; }

    private OrderDtoVm? order;
    private bool loading;
    private string? error;
    private bool showMenuModal;
    private List<MenuItemDto> menuItems = new();
    private bool menuLoading;
    private string menuError = string.Empty;

    protected override async Task OnParametersSetAsync()
    {
        await LoadAsync();
        await LoadMenuItemsAsync();
    }

    // --- REALTIME SETUP ---
    protected override void OnInitialized()
    {
        RealtimeService.OrderStatusChanged += OnRealtimeStatusChanged;
        RealtimeService.PaymentRequestReceived += OnRealtimePaymentRequest;
    }

    public void Dispose()
    {
        RealtimeService.OrderStatusChanged -= OnRealtimeStatusChanged;
        RealtimeService.PaymentRequestReceived -= OnRealtimePaymentRequest;
    }

    private void OnRealtimeStatusChanged(Guid changedOrderId, string newStatus)
    {
        if (order != null && order.Id == changedOrderId)
        {
            _ = InvokeAsync(async () => { await LoadAsync(); StateHasChanged(); });
        }
    }

    private void OnRealtimePaymentRequest(PaymentRequestPayload payload)
    {
        if (order != null && order.Id == payload.OrderId)
        {
            Toast.ShowSuccess($"Bàn {payload.TableCode} yêu cầu thanh toán!");
            _ = InvokeAsync(async () => { await LoadAsync(); StateHasChanged(); });
        }
    }
    // ---------------------

    private void GoBack() => Nav.NavigateTo("/tables");

    private async Task LoadAsync()
    {
        if (order == null) loading = true;
        error = null;
        try
        {
            order = await ApiClient.Http.GetFromJsonAsync<OrderDtoVm>($"api/orders/{orderId}");
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }

    private async Task StartOrderAsync()
    {
        if (order == null) return;
        await PostJsonAsync("api/orders/start", new { OrderId = order.Id, TableId = order.TableId });
    }

    private async Task MarkServedAsync()
    {
        if (order == null) return;
        await PostAsync($"api/orders/{order.Id}/served");
        Toast.ShowSuccess("Đã phục vụ!");
        await LoadAsync();
    }

    private async Task ExportInvoiceAsync()
    {
        // TODO: Gọi API In
        Toast.ShowSuccess("Đang xuất hóa đơn...");
    }

    private async Task HandlePayment(PaymentMethod method)
    {
        if (order == null) return;
        var success = await ApiClient.PayOrderAsync(order.Id, order.Total, order.Currency);
        if (success)
        {
            Toast.ShowSuccess("Thanh toán thành công!");
            await LoadAsync();
        }
        else
        {
            Toast.ShowError("Lỗi thanh toán.");
        }
    }

    private async Task PostAsync(string url)
    {
        var resp = await ApiClient.Http.PostAsync(url, null);
        if (resp.IsSuccessStatusCode) await LoadAsync();
        else Toast.ShowError("Lỗi API");
    }

    private async Task PostJsonAsync(string url, object body)
    {
        var resp = await ApiClient.Http.PostAsJsonAsync(url, body);
        if (resp.IsSuccessStatusCode) await LoadAsync();
        else Toast.ShowError("Lỗi API");
    }

    private async Task LoadMenuItemsAsync()
    {
        menuLoading = true;
        try { menuItems = await ApiClient.Http.GetFromJsonAsync<List<MenuItemDto>>("api/menu-items") ?? new(); }
        catch { }
        finally { menuLoading = false; }
    }

    private async Task AddItemToOrder(MenuItemDto item)
    {
        if (order == null) return;
        await PostJsonAsync("api/order-items", new { OrderId = order.Id, MenuItemId = item.Id, Quantity = 1 });
        showMenuModal = false;
    }

    public class OrderDtoVm
    {
        public Guid Id { get; set; }
        public Guid TableId { get; set; }
        public int Status { get; set; }
        public decimal Total { get; set; }
        public string Currency { get; set; } = "VND";
        public List<OrderItemVm> Items { get; set; } = new();
    }
    public class OrderItemVm
    {
        public string Name { get; set; } = string.Empty;
        public int Quantity { get; set; }
        public decimal LineTotal { get; set; }
    }
    public class MenuItemDto
    {
        public Guid Id { get; set; }
        public string Name { get; set; } = string.Empty;
        public decimal Price { get; set; }
        public string Currency { get; set; } = "VND";
    }

    private string GetStatusText(int s) => s switch
    {
        1 => "Chờ xác nhận",
        2 => "Đang nấu",
        3 => "Sẵn sàng",
        4 => "Đã phục vụ",
        5 => "Đã thanh toán",
        7 => "Chờ thanh toán",
        _ => "Khác"
    };
}