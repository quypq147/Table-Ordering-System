@page "/tables/{tableId:guid}"
@using System.Net.Http.Json
@using WaiterApp.Models
@using WaiterApp.Services
@inject ApiClient ApiClient
@inject OrdersRealtimeService Realtime
@inject Microsoft.AspNetCore.Components.NavigationManager Navigation

<div class="container py-4">
    <div class="d-flex align-items-center mb-3">
        <button class="btn btn-outline-secondary me-3" @onclick="BackToTables">
            <i class="bi bi-arrow-left"></i>
        </button>
        <div>
            <h4 class="mb-0">Chi tiết bàn</h4>
            <small class="text-muted">Theo dõi món đang phục vụ và thao tác thanh toán</small>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(paymentRequestMessage))
    {
        <div class="alert alert-warning d-flex justify-content-between align-items-center">
            <span>@paymentRequestMessage</span>
            <button class="btn btn-sm btn-outline-secondary" @onclick="() => paymentRequestMessage = null">Đã hiểu</button>
        </div>
    }

    @if (loading)
    {
        <div class="alert alert-info">Đang tải dữ liệu...</div>
    }
    else if (!string.IsNullOrEmpty(error))
    {
        <div class="alert alert-danger">@error</div>
    }
    else if (table is null)
    {
        <div class="alert alert-warning">Không tìm thấy thông tin bàn.</div>
    }
    else
    {
        <div class="card shadow-sm mb-4">
            <div class="card-body d-flex justify-content-between align-items-center flex-wrap gap-2">
                <div>
                    <div class="text-uppercase fw-bold fs-5">@table.Code</div>
                    <div class="text-muted">@table.Seats ghế</div>
                </div>
                <span class="badge text-bg-primary text-uppercase">@table.Status</span>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-12 col-lg-7">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="mb-3">Món đang phục vụ</h5>
                        @if (items.Count == 0)
                        {
                            <div class="alert alert-secondary mb-0">Không có món nào trong đơn hiện tại.</div>
                        }
                        else
                        {
                            <div class="list-group list-group-flush flex-grow-1">
                                @foreach (var item in items)
                                {
                                    <div class="list-group-item py-3 py-lg-4">
                                        <div class="d-flex justify-content-between align-items-center gap-3">
                                            <div class="flex-fill">
                                                <div class="fw-semibold fs-6">@item.ItemName</div>
                                                @if (!string.IsNullOrWhiteSpace(item.Note))
                                                {
                                                    <div class="text-muted small">@item.Note</div>
                                                }
                                                <span class="badge text-bg-light text-uppercase mt-1">@item.Status</span>
                                            </div>
                                            <div class="d-flex align-items-center gap-2 flex-shrink-0">
                                                <button type="button" class="btn btn-outline-secondary btn-lg rounded-circle px-3" @onclick="() => DecreaseQuantity(item)">
                                                    -
                                                </button>
                                                <div class="fs-5 fw-bold text-center" style="min-width: 3rem;">@item.Quantity</div>
                                                <button type="button" class="btn btn-outline-secondary btn-lg rounded-circle px-3" @onclick="() => IncreaseQuantity(item)">
                                                    +
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }

                        <div class="mt-3">
                            <label class="form-label fw-semibold">Ghi chú cho đơn</label>
                            <textarea class="form-control" rows="3" @bind="orderNote" placeholder="Ví dụ: Không cay, mang ra cùng lúc..."></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-5">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column gap-3">
                        <div>
                            <div class="text-muted text-uppercase small">Tổng tiền</div>
                            <div class="fw-bold" style="font-size: 2.2rem;">
                                @FormatTotalAmount()
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-2">
                            <button class="btn btn-primary btn-lg" type="button" @onclick="SendToKitchenAsync">
                                Gửi bếp
                            </button>
                            <button class="btn btn-danger btn-lg" type="button" disabled="@confirming" @onclick="ConfirmCashAsync">
                                @if (confirming)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                Thanh toán
                            </button>
                            <button class="btn btn-info btn-lg text-white" type="button" @onclick="PrintBillAsync">
                                In hóa đơn
                            </button>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between align-items-center small text-muted">
                            <span>Mã đơn hiện tại</span>
                            <span>@(currentOrderId?.ToString() ?? "Không có")</span>
                        </div>

                        <div class="d-flex justify-content-between flex-wrap gap-2 mt-3">
                            <button class="btn btn-outline-secondary" type="button" @onclick="BackToTables">Quay lại danh sách bàn</button>
                            <button class="btn btn-outline-primary" type="button" @onclick="NavigateToTickets">Xem phiếu bếp</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public Guid tableId { get; set; }

    private TableDto? table;
    private List<OrderItemDto> items = new();
    private bool loading;
    private string? error;

    private Guid? currentOrderId;
    private bool canConfirmCash;
    private bool confirming;
    private string? paymentRequestMessage;
    private bool eventsHooked;
    private string? orderNote;

    protected override async Task OnParametersSetAsync()
    {
        await LoadAsync();
        await EnsureRealtimeAsync();
    }

    private async Task LoadAsync()
    {
        loading = true;
        error = null;
        try
        {
            var tableTask = ApiClient.Http.GetFromJsonAsync<TableDto>(WaiterApiEndpoints.Tables.Get(tableId));
            var itemsTask = ApiClient.Http.GetFromJsonAsync<List<OrderItemDto>>(WaiterApiEndpoints.Orders.ItemsByTable(tableId));
            table = await tableTask;
            items = (await itemsTask) ?? new List<OrderItemDto>();

            // Lấy active order cho bàn để phục vụ nút xác nhận thanh toán
            await LoadActiveOrderAsync();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }

    private async Task LoadActiveOrderAsync()
    {
        try
        {
            var url = WaiterApiEndpoints.Orders.ByTable(tableId, 1, 1);
            var orders = await ApiClient.Http.GetFromJsonAsync<List<BackendOrderSnapshot>>(url) ?? new();
            var active = orders
                .OrderByDescending(o => o.CreatedAt)
                .FirstOrDefault(o => !string.Equals(o.Status, "Paid", StringComparison.OrdinalIgnoreCase)
                                     && !string.Equals(o.Status, "Cancelled", StringComparison.OrdinalIgnoreCase));

            if (active != null)
            {
                currentOrderId = active.Id;
                canConfirmCash = string.Equals(active.Status, "WaitingForPayment", StringComparison.OrdinalIgnoreCase);
            }
            else
            {
                currentOrderId = null;
                canConfirmCash = false;
            }
        }
        catch
        {
            currentOrderId = null;
            canConfirmCash = false;
        }
    }

    private async Task EnsureRealtimeAsync()
    {
        if (eventsHooked) return;
        eventsHooked = true;
        Realtime.PaymentRequestReceived += OnPaymentRequestReceived;
        if (!Realtime.IsConnected)
            await Realtime.StartAsync();
    }

    private void OnPaymentRequestReceived(PaymentRequestPayload payload)
    {
        _ = InvokeAsync(async () =>
        {
            if (table != null &&
                !string.IsNullOrWhiteSpace(payload.TableCode) &&
                string.Equals(table.Code, payload.TableCode, StringComparison.OrdinalIgnoreCase))
            {
                paymentRequestMessage = $"Bàn {payload.TableCode} vừa yêu cầu thanh toán tiền mặt.";
                await LoadActiveOrderAsync();
                StateHasChanged();
            }
        });
    }

    private sealed class BackendOrderSnapshot
    {
        public Guid Id { get; set; }
        public string Status { get; set; } = string.Empty;
        public DateTime CreatedAt { get; set; }
    }

    private sealed class BackendOrderDetail
    {
        public Guid Id { get; set; }
        public string Status { get; set; } = string.Empty;
        public decimal Total { get; set; }
        public string Currency { get; set; } = "VND";
    }

    private async Task ConfirmCashAsync()
    {
        if (!currentOrderId.HasValue || !canConfirmCash) return;
        confirming = true;
        error = null;
        try
        {
            var order = await ApiClient.Http
                .GetFromJsonAsync<BackendOrderDetail>(WaiterApiEndpoints.Orders.Get(currentOrderId.Value));
            if (order == null)
            {
                error = "Không tìm thấy đơn để thanh toán.";
                return;
            }

            var payload = new { amount = order.Total, currency = order.Currency, note = orderNote };
            var resp = await ApiClient.Http.PostAsJsonAsync(
                WaiterApiEndpoints.Orders.Pay(currentOrderId.Value), payload);
            resp.EnsureSuccessStatusCode();

            await LoadAsync();          // làm mới bàn + món + đơn active
            paymentRequestMessage = null;
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            confirming = false;
        }
    }

    private void IncreaseQuantity(OrderItemDto item)
    {
        item.Quantity++;
        // TODO: Gửi cập nhật số lượng lên server nếu cần
    }

    private void DecreaseQuantity(OrderItemDto item)
    {
        if (item.Quantity <= 1) return;
        item.Quantity--;
        // TODO: Gửi cập nhật số lượng lên server nếu cần
    }

    private string FormatTotalAmount()
    {
        // TODO: Tính tổng tiền từ danh sách món nếu có đơn giá; tạm thời hiển thị "Đang cập nhật"
        return "Đang cập nhật";
    }

    private async Task SendToKitchenAsync()
    {
        // TODO: Gửi món mới hoặc thay đổi số lượng lên bếp
        await Task.CompletedTask;
    }

    private async Task PrintBillAsync()
    {
        // TODO: Gọi API in hóa đơn hoặc mở màn hình in
        await Task.CompletedTask;
    }

    private void BackToTables() => Navigation.NavigateTo("/tables");

    private void NavigateToTickets() => Navigation.NavigateTo($"/tables/{tableId}/tickets");
}
