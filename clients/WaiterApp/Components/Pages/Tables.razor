@page "/"
@page "/tables"
@using System.Net.Http.Json
@using TableOrdering.Contracts
@using WaiterApp.Models
@inject WaiterApp.Services.ApiClient ApiClient
@inject Microsoft.AspNetCore.Components.NavigationManager Navigation

<div class="tables-page">
    <div class="d-flex align-items-start flex-wrap gap-3 mb-4">
        <div>
            <p class="text-uppercase text-muted small mb-1">Tổng quan khu bàn</p>
            <h4 class="mb-0">Danh sách bàn</h4>
            <small class="text-muted">Theo dõi trạng thái phục vụ trong nhà hàng</small>
        </div>
        <button class="btn btn-outline-dark ms-auto d-flex align-items-center gap-2" @onclick="LoadAsync" disabled="@loading">
            <span class="spinner-border spinner-border-sm" role="status" hidden="@(!loading)"></span>
            Tải lại
        </button>
    </div>

    @if (!string.IsNullOrEmpty(error))
    {
        <div class="alert alert-danger">@error</div>
    }

    <div class="row g-3 g-md-4">
        @if (loading && tables.Count == 0)
        {
            <div class="col-12">
                <div class="alert alert-info mb-0">Đang tải dữ liệu bàn...</div>
            </div>
        }
        else if (tables.Count == 0)
        {
            <div class="col-12">
                <div class="alert alert-secondary mb-0">Chưa có bàn nào.</div>
            </div>
        }
        else
        {
            @foreach (var table in tables)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <button type="button"
                            class="table-tile btn w-100 h-100 p-3 p-md-4 text-start d-flex flex-column justify-content-between @GetCardClass(table)"
                            @onclick="() => NavigateToDetail(table.Id)">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <div class="d-flex align-items-center gap-2">
                                <span class="table-icon rounded-circle d-inline-flex align-items-center justify-content-center">
                                    <i class="@GetStatusIconClass(table)"></i>
                                </span>
                                <div class="small text-muted text-uppercase fw-semibold">@GetStatusText(table)</div>
                            </div>
                            <span class="badge rounded-pill bg-light text-dark small">@table.Seats ghế</span>
                        </div>

                        <div class="flex-fill d-flex flex-column align-items-center justify-content-center text-center py-2">
                            <div class="fw-bold" style="font-size: 1.4rem;">
                                @table.Code
                            </div>
                        </div>

                        <div class="mt-3 d-flex align-items-center justify-content-between small opacity-75">
                            <div>
                                @if (table.Status == TableStatus.InUse)
                                {
                                    <div class="d-flex flex-column">
                                        <span class="text-uppercase text-muted fw-semibold">Phiên phục vụ</span>
                                        <span>@GetSessionLabel(table)</span>
                                    </div>
                                }
                                else if (table.Status == TableStatus.Reserved)
                                {
                                    <span>Đã đặt trước</span>
                                }
                                else
                                {
                                    <span>Sẵn sàng đón khách</span>
                                }
                            </div>
                            <i class="bi bi-chevron-right opacity-50"></i>
                        </div>
                    </button>
                </div>
            }
        }
    </div>
</div>

@code {
    private readonly List<TableDto> tables = new();
    private bool loading;
    private string? error;

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        loading = true;
        error = null;
        try
        {
            var data = await ApiClient.Http.GetFromJsonAsync<List<TableDto>>(WaiterApiEndpoints.Tables.List);
            tables.Clear();
            if (data != null)
            {
                tables.AddRange(data.OrderBy(t => t.Code));
            }
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }

    private static string GetCardClass(TableDto table) => table.Status switch
    {
        TableStatus.Available => "table-tile--available",
        TableStatus.InUse => "table-tile--occupied",
        TableStatus.Reserved => "table-tile--reserved",
        _ => string.Empty
    };

    private static string GetStatusIconClass(TableDto table) => table.Status switch
    {
        TableStatus.Available => "bi bi-check-lg",
        TableStatus.InUse => "bi bi-people-fill",
        TableStatus.Reserved => "bi bi-clock-fill",
        _ => "bi bi-dot"
    };

    private static string GetStatusText(TableDto table) => table.Status switch
    {
        TableStatus.Available => "Trống",
        TableStatus.InUse => "Có khách",
        TableStatus.Reserved => "Đã đặt trước",
        _ => table.Status.ToString()
    };

    private static string GetSessionLabel(TableDto table)
    {
        // Display SessionId or time seated when available
        if (!string.IsNullOrWhiteSpace(table.SessionId))
        {
            return $"Mã phiên: {table.SessionId}";
        }

        if (table.TimeSeated.HasValue)
        {
            var duration = DateTimeOffset.Now - table.TimeSeated.Value;
            if (duration < TimeSpan.Zero)
            {
                duration = TimeSpan.Zero;
            }

            var parts = new List<string>();
            if (duration.Hours > 0)
            {
                parts.Add($"{duration.Hours} giờ");
            }

            if (duration.Minutes > 0 || parts.Count == 0)
            {
                parts.Add($"{duration.Minutes} phút");
            }

            return string.Join(" ", parts);
        }

        return "Đang cập nhật";
    }

    private void NavigateToDetail(Guid id) => Navigation.NavigateTo($"/tables/{id}");
}
