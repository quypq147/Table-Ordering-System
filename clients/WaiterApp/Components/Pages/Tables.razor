@page "/tables"
@using System.Net.Http.Json
@using TableOrdering.Contracts
@using WaiterApp.Models
@inject WaiterApp.Services.ApiClient ApiClient
@inject Microsoft.AspNetCore.Components.NavigationManager Navigation

<div class="tables-page">
    <div class="d-flex align-items-start flex-wrap gap-3 mb-4">
        <div>
            <p class="text-uppercase text-muted small mb-1">Lezato overview</p>
            <h4 class="mb-0">Danh sách bàn</h4>
            <small class="text-muted">Theo dõi tr?ng thái ph?c v? trong nhà hàng</small>
        </div>
        <button class="btn btn-outline-dark ms-auto d-flex align-items-center gap-2" @onclick="LoadAsync" disabled="@loading">
            <span class="spinner-border spinner-border-sm" role="status" hidden="@(!loading)"></span>
            T?i l?i
        </button>
    </div>

    @if (!string.IsNullOrEmpty(error))
    {
        <div class="alert alert-danger">@error</div>
    }

    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
        @if (loading && tables.Count == 0)
        {
            <div class="col">
                <div class="alert alert-info mb-0">?ang t?i d? li?u bàn...</div>
            </div>
        }
        else if (tables.Count == 0)
        {
            <div class="col">
                <div class="alert alert-secondary mb-0">Ch?a có bàn nào.</div>
            </div>
        }
        else
        {
            @foreach (var table in tables)
            {
                <div class="col">
                    <div class="@GetCardClass(table)">
                        <div class="d-flex align-items-start justify-content-between gap-3">
                            <div>
                                <div class="table-code">@table.Code</div>
                                <div class="table-meta text-muted small">
                                    <span><i class="bi bi-people me-1"></i>@table.Seats gh?</span>
                                </div>
                            </div>
                            <span class="@GetStatusChipClass(table)">@GetStatusText(table)</span>
                        </div>

                        <div class="table-state mt-4">
                            @if (table.Status == TableStatus.InUse)
                            {
                                <div class="d-flex flex-column gap-3">
                                    <div>
                                        <small class="text-uppercase text-muted fw-semibold">Th?i gian ng?i</small>
                                        <div class="fs-4 fw-bold">@GetSeatedDuration(table)</div>
                                    </div>
                                    <div>
                                        <small class="text-uppercase text-muted fw-semibold">T?m tính</small>
                                        <div class="fs-4 fw-bold">@GetRunningTotal(table)</div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="text-muted">S?n sàng ?ón khách m?i.</div>
                            }
                        </div>

                        <div class="table-card__actions mt-4 d-flex gap-2">
                            <button class="btn btn-outline-dark flex-fill" @onclick="() => NavigateToDetail(table.Id)">Chi ti?t</button>
                            <button class="btn btn-outline-secondary flex-fill" @onclick="() => NavigateToTickets(table.Id)">Phi?u b?p</button>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@code {
    private readonly List<TableDto> tables = new();
    private bool loading;
    private string? error;

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        loading = true;
        error = null;
        try
        {
            var data = await ApiClient.Http.GetFromJsonAsync<List<TableDto>>(WaiterApiEndpoints.Tables.List);
            tables.Clear();
            if (data != null)
            {
                tables.AddRange(data.OrderBy(t => t.Code));
            }
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }

    private static string GetCardClass(TableDto table) => table.Status switch
    {
        TableStatus.Available => "table-card table-card--available",
        TableStatus.InUse => "table-card table-card--occupied",
        _ => "table-card"
    };

    private static string GetStatusChipClass(TableDto table) => table.Status switch
    {
        TableStatus.Available => "status-chip status-chip--success",
        TableStatus.InUse => "status-chip status-chip--warning",
        _ => "status-chip"
    };

    private static string GetStatusText(TableDto table) => table.Status switch
    {
        TableStatus.Available => "Tr?ng",
        TableStatus.InUse => "?ang ph?c v?",
        _ => table.Status.ToString()
    };

    private static string GetSeatedDuration(TableDto table)
        => table.Status == TableStatus.InUse ? "?ang c?p nh?t" : "—";

    private static string GetRunningTotal(TableDto table)
        => table.Status == TableStatus.InUse ? "?ang c?p nh?t" : "—";

    private void NavigateToDetail(Guid id) => Navigation.NavigateTo($"/tables/{id}");

    private void NavigateToTickets(Guid id) => Navigation.NavigateTo($"/tables/{id}/tickets");
}
