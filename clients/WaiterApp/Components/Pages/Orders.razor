@page "/orders"
@using WaiterApp.Services
@inject ApiClient ApiClient
@inject OrdersRealtimeService Realtime
@inject ToastService Toast
@inject NavigationManager Navigation

<div class="px-6 pt-8 pb-24 h-full flex flex-col">
    <div class="mb-4">
        <h1 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">Đơn hàng</h1>
        <div class="relative">
            <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400 material-icons-round">search</span>
            <input type="text"
                   class="w-full pl-10 pr-4 py-3 bg-white dark:bg-gray-800 rounded-xl border-none shadow-sm focus:ring-2 focus:ring-primary/50 text-sm"
                   placeholder="Tìm theo bàn hoặc mã..."
                   @bind="searchTerm" @bind:event="oninput" />
        </div>
    </div>

    <div class="flex p-1 bg-gray-200 dark:bg-gray-800 rounded-xl mb-6 shadow-inner">
        <button class="@GetTabClass(OrderFilter.New)" @onclick="() => SetFilter(OrderFilter.New)">Mới</button>
        <button class="@GetTabClass(OrderFilter.InProgress)" @onclick="() => SetFilter(OrderFilter.InProgress)">Bếp</button>
        <button class="@GetTabClass(OrderFilter.Completed)" @onclick="() => SetFilter(OrderFilter.Completed)">Xong</button>
    </div>

    <div class="flex-1 overflow-y-auto no-scrollbar space-y-3">
        @if (filteredOrders.Count == 0)
        {
            <div class="flex flex-col items-center justify-center h-48 text-gray-400">
                <span class="material-icons-round text-4xl mb-2 opacity-50">receipt_long</span>
                <span class="text-sm">Không có đơn hàng nào</span>
            </div>
        }
        else
        {
            @foreach (var order in filteredOrders)
            {
                <div @onclick="NaviagateToOrderDetail"
                     class="bg-white dark:bg-gray-800 p-4 rounded-2xl shadow-soft border border-gray-50 dark:border-gray-700 active:scale-95 transition-transform cursor-pointer">

                    <div class="flex justify-between items-start mb-3">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center text-primary font-bold text-sm">
                                @GetShortCode(order.TableCode)
                            </div>
                            <div>
                                <h3 class="font-bold text-gray-800 dark:text-white text-sm">@order.TableCode</h3>
                                <p class="text-xs text-gray-400">@order.CreatedAtUtc.ToLocalTime().ToString("HH:mm")</p>
                            </div>
                        </div>
                        <span class="px-2 py-1 rounded-lg text-[10px] font-bold uppercase tracking-wide @GetStatusClass(order.Status)">
                            @GetStatusText(order.Status)
                        </span>
                    </div>

                    <div class="flex justify-between items-center text-sm">
                        <span class="text-gray-500">Món chờ: <b class="text-gray-800 dark:text-gray-200">@order.PendingItems</b></span>
                        <span class="material-icons-round text-gray-300 text-sm">arrow_forward_ios</span>
                    </div>
                </div>
            }
        }
    </div>
</div>

@code {
    // ... (Giữ nguyên logic C# cũ: Enum, List, LoadAsync, Filter...)
    // Copy lại toàn bộ logic C# từ file Orders.razor cũ của bạn vào đây.
    // Chỉ thay đổi phần Render HTML ở trên.

    // Helper Styles
    private string GetTabClass(OrderFilter f)
        => activeFilter == f
            ? "flex-1 py-2 rounded-lg bg-white dark:bg-gray-700 text-primary shadow-sm text-sm font-medium transition-all"
            : "flex-1 py-2 text-gray-500 dark:text-gray-400 text-sm font-medium hover:text-gray-700";

    private string GetShortCode(string code) => code.Replace("Table", "").Replace("T-", "");

    private string GetStatusClass(string s) => s switch
    {
        "Submitted" => "bg-blue-50 text-blue-600",
        "InProgress" => "bg-orange-50 text-orange-600",
        "Ready" => "bg-green-50 text-green-600",
        "Paid" => "bg-gray-100 text-gray-500",
        _ => "bg-gray-100 text-gray-500"
    };

    // (Đừng quên copy các hàm logic: OnInitializedAsync, RefreshAsync, ApplyFilters...)
    private enum OrderFilter { New, InProgress, Completed }
    private List<OrderSummaryVm> orders = new();
    private List<OrderSummaryVm> filteredOrders = new();
    private OrderFilter activeFilter = OrderFilter.New;
    private string? searchTerm;
    private bool isRefreshing;
    private string? loadError;
    private CancellationTokenSource? cts;

    protected override async Task OnInitializedAsync()
    {
        cts = new CancellationTokenSource();
        Realtime.OrderStatusChanged += OnOrderStatusChanged;
        await Realtime.StartAsync();
        await LoadAsync();
        ApplyFilters();
        _ = AutoRefreshAsync(cts.Token);
    }

    public async ValueTask DisposeAsync()
    {
        Realtime.OrderStatusChanged -= OnOrderStatusChanged;
        cts?.Cancel();
        await Realtime.StopAsync();
        cts?.Dispose();
    }

    private async Task RefreshAsync()
    {
        isRefreshing = true;
        try { await LoadAsync(); ApplyFilters(); } finally { isRefreshing = false; }
    }

    private async Task LoadAsync()
    {
        isRefreshing = true; loadError = null;
        try
        {
            // Update namespace WaiterApiEndpoints properly if needed
            var url = $"api/orders?page=1&pageSize=200";
            using var request = new HttpRequestMessage(HttpMethod.Get, url);
            var response = await ApiClient.Http.SendAsync(request);
            if (!response.IsSuccessStatusCode) { orders = new(); return; }
            orders = await response.Content.ReadFromJsonAsync<List<OrderSummaryVm>>() ?? new();
        }
        catch (Exception ex) { loadError = ex.Message; }
        finally { isRefreshing = false; }
    }

    private Task AutoRefreshAsync(CancellationToken ct) => Task.Run(async () =>
    {
        try
        {
            while (!ct.IsCancellationRequested)
            {
                await Task.Delay(TimeSpan.FromSeconds(30), ct);
                await LoadAsync(); ApplyFilters(); await InvokeAsync(StateHasChanged);
            }
        }
        catch { }
    });

    private void OnOrderStatusChanged(Guid id, string status)
        => _ = InvokeAsync(async () => { await LoadAsync(); ApplyFilters(); StateHasChanged(); });

    private void ApplyFilters()
    {
        IEnumerable<OrderSummaryVm> query = orders;
        if (!string.IsNullOrWhiteSpace(searchTerm))
            query = query.Where(o => o.TableCode.Contains(searchTerm, StringComparison.OrdinalIgnoreCase));

        string[] statusFilter = activeFilter switch
        {
            OrderFilter.New => new[] { "Submitted" },
            OrderFilter.InProgress => new[] { "InProgress", "Ready", "WaitingForPayment" },
            _ => new[] { "Paid", "Cancelled" }
        };

        filteredOrders = query.Where(o => statusFilter.Contains(o.Status)).OrderByDescending(x => x.CreatedAtUtc).ToList();
    }
    private async void NaviagateToOrderDetail()
    {
        Navigation.NavigateTo("/orderdetail?orderId={order.Id}", true);

    }
    private void SetFilter(OrderFilter f) { activeFilter = f; ApplyFilters(); }

    private string GetStatusText(string s) => s switch
    {
        "Submitted" => "Mới",
        "InProgress" => "Đang làm",
        "Ready" => "Sẵn sàng",
        "Paid" => "Xong",
        _ => s
    };

    public class OrderSummaryVm
    {
        public Guid Id { get; set; }
        public string TableCode { get; set; } = "";
        public string Status { get; set; } = "";
        public int PendingItems { get; set; }
        public DateTime CreatedAtUtc { get; set; }
    }
}