@page "/"
@page "/main"

<div class="container py-4">
    <h4 class="mb-4">Waiter App</h4>

    <div class="row g-3">
        <div class="col-12 col-md-6 col-lg-4">
            <a class="text-decoration-none" href="/orders">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex align-items-center justify-content-between">
                        <div>
                            <div class="fw-bold">Đơn hàng</div>
                            <div class="text-muted small">Xem và xử lý đơn</div>
                        </div>
                        <i class="fa fa-shopping-bag fs-3 text-primary"></i>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-12 col-md-6 col-lg-4">
            <a class="text-decoration-none" href="/chat">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex align-items-center justify-content-between">
                        <div>
                            <div class="fw-bold">Trò chuyện</div>
                            <div class="text-muted small">Tin nhắn nội bộ</div>
                        </div>
                        <i class="fa fa-comments fs-3 text-success"></i>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-12 col-md-6 col-lg-4">
            <a class="text-decoration-none" href="/login">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex align-items-center justify-content-between">
                        <div>
                            <div class="fw-bold">Đăng nhập</div>
                            <div class="text-muted small">Truy cập hệ thống</div>
                        </div>
                        <i class="fa fa-sign-in-alt fs-3 text-secondary"></i>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
