<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:blazor="clr-namespace:Microsoft.AspNetCore.Components.WebView.Maui;assembly=Microsoft.AspNetCore.Components.WebView.Maui"
             xmlns:components="clr-namespace:WaiterApp.Components"
             x:Class="WaiterApp.MainPage"
             BackgroundColor="Transparent">
    <blazor:BlazorWebView x:Name="WaiterBlazorWebView"
                          HostPage="wwwroot/index.html"
                          HorizontalOptions="FillAndExpand"
                          VerticalOptions="FillAndExpand">
        <blazor:BlazorWebView.RootComponents>
            <blazor:RootComponent Selector="#app"
                                  ComponentType="{x:Type components:Routes}" />
        </blazor:BlazorWebView.RootComponents>
    </blazor:BlazorWebView>
</ContentPage>
