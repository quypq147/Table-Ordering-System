<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:WaiterApp.Pages"
       x:Class="WaiterApp.AppShell">

    <!-- Minimal Shell with a FlyoutItem pointing to TablesPage -->
    <FlyoutItem Title="Bàn" Icon="icon_tables.png">
        <ShellContent ContentTemplate="{DataTemplate pages:TablesPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Đơn hàng" Icon="icon_orders.png">
        <ShellContent ContentTemplate="{DataTemplate pages:OrdersPage}" />
    </FlyoutItem>

</Shell>

